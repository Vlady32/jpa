<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <application>
      <locale-config>
        <default-locale>en</default-locale>
        <supported-locale>ru</supported-locale>
      </locale-config>
      <resource-bundle>
        <base-name>resources.messages</base-name>
        <var>msgs</var>
      </resource-bundle>
    </application>
    <navigation-rule>
      <from-view-id>/jsf/login.xhtml</from-view-id>
      <navigation-case>
        <from-outcome>success</from-outcome>
        <to-view-id>/jsf/main.xhtml</to-view-id>
        <redirect/>
      </navigation-case>
    </navigation-rule>
    <navigation-rule>
      <from-view-id>/jsf/registration.xhtml</from-view-id>
      <navigation-case>
        <from-outcome>success</from-outcome>
        <to-view-id>/jsf/registrationSuccessful.xhtml</to-view-id>
        <redirect/>
      </navigation-case>
    </navigation-rule>
    <navigation-rule>
      <navigation-case>
        <from-outcome>logout</from-outcome>
        <to-view-id>/jsf/login.xhtml</to-view-id>
        <redirect/>
      </navigation-case>
    </navigation-rule>  
</faces-config>